{
  "name": "mopchan-main",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm --filter server dev\" \"pnpm --filter client dev\"",
    "build": "pnpm --filter client build && pnpm --filter server build",
    "start": "node dist/server/index.js",
    "migrate": "drizzle-kit generate --name \"init\" && drizzle-kit push",
    "import-admins": "tsx scripts/import-admins.ts"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "devDependencies": {
    "concurrently": "^8.2.0",
    "drizzle-kit": "^0.7.0",
    "typescript": "^5.1.6",
    "tsx": "^3.12.7"
  },
  "dependencies": {
    // server deps
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.1",
    "drizzle-orm": "^0.23.0",
    "neon-serverless": "^0.4.0",
    "ws": "^8.13.0",
    "zod": "^3.23.2",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "express-rate-limit": "^7.0.0",
    "compression": "^1.7.4",
    "serve-static": "^1.15.0",

    // client deps
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.1",
    "axios": "^1.4.0"
  }
}
